---
pageable: true
---
<h2>Archive for
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%B %e, %Y') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%B, %Y') %>
  <% when 'year' %>
    <%= year %>
  <% end %>
</h2>

<% if paginate %>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
  <li><%= link_to article.title, article %> <span class="muted">&mdash; <%= article.date.strftime('%B %e') %></span></li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
