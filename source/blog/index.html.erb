---
pageable: true
per_page: 10
---
<% if paginate %>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %></h2>
  <p><%= article.summary %></p>
  <p><span class="muted"><%= article.date.strftime('%B %e, %Y') %></span></p>
  <hr>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
