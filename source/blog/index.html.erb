---
pageable: true
per_page: 10
---
<% if paginate %>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
<div class="panel">
  <div class="panel-heading"><h3><%= link_to article.title, article %></h3></div>
  <%= article.body %>
  <div class="panel-footer">
    <span class="muted"><%= article.date.strftime('%B %e, %Y') %> &mdash; <%= link_to "Permalink", article %></span>
  </div>
</div>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
