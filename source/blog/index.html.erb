---
pageable: true
per_page: 10
---
<% if paginate %>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
<h2><%= link_to article.title, article %></h2>
<%= article.body %>
<p class="text-muted"><%= article.date.strftime('%B %e, %Y') %> &mdash; <%= link_to "Permalink", article %></p>
<% if i < page_articles.size - 1 %>
<%= '<hr>' %>
<% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
