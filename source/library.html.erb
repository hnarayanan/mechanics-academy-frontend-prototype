      <%= partial 'partials/course_listing', :locals => { :course => demo, :width => "span4" } %>
      <% end %>
    </ul>
    </hr>
    <h3 id="lectures">Individual lectures</h3>
    <ul class="thumbnails">
      <% data.lectures.each do |lecture| %>
      <%= partial 'partials/course_listing', :locals => { :course => lecture, :width => "span4" } %>
      <% end %>
    </ul>
    <hr>
    <h3 id="courses">Complete courses</h3>
    <ul class="thumbnails">
      <% data.courses.each do |course| %>
      <%= partial 'partials/course_listing', :locals => { :course => course, :width => "span4" } %>
      <% end %>
    </ul>
    <hr>
    <h3 id="resources">Supplemental resources</h3>
  </div>
